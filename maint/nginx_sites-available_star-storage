server {
    root /var/www/cargo;

    # Add index.php to the list if you are using PHP
    index index.html index.htm;

    server_name cargo.web3.storage cargo.nft.storage;

    location / {
        # First attempt to serve request as file, then
        # as directory, then fall back to displaying a 404.
        try_files $uri $uri/ =404;
    }

    location /etc {
        deny all;
        return 404;
    }

    location /deal-cars {
        include /var/www/cargo/etc/car_s3_redirects;
    }

    location /system-logs {
        auth_basic "Ask ribasushi for credentials";
        auth_basic_user_file /var/www/cargo/etc/.htpasswd;

        autoindex on;
        autoindex_exact_size off;
        autoindex_format html;
        autoindex_localtime on;
        types {
            text/plain log ndjson;
        }
    }
}
